function usage() {
    cat <<EOF
Format and output a manpage file.

Usage: ${SCRIPTNAME} [FILE.n]

  FILE.n                Manpage file to output.

Examples:

  # Read the coffee manpage without installing it
  ${SCRIPTNAME} coffee.1

EOF
}


##############################################################################
# PROGRAM BEGINS HERE

include "getopt.sh"

SCRIPTNAME=$(basename "${BASH_SOURCE}")


function main() {
    local OPTOPT OPTARG OPTERR OPTARRAY
    local errcount=0

    # Process options
    while coffee::getopt "h" "help" "$@"; do
        case "$OPTOPT" in
            -h|--help)     usage && exit 0          ;;
            *)             errcount=$((errcount+1)) ;;
        esac
    done

    # Sanity check
    if (( errcount )); then
        echo "Type '${SCRIPTNAME} -h' for help." 1>&2
        exit 1
    fi

    mancat "${OPTARRAY[@]}"
}


function mancat() {
    # groff -t -e -mandoc -Tascii "$@"
    # groff -t -e -mandoc -Tascii "$@" | col -bx
    man -l "$@"
}


##############################################################################
# ENTRY POINT

main "$@"
